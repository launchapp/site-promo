{% extends 'SitetheoryTemplateBundle::shell.html.twig' %}

{# Load Site CSS #}

{% block link %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/sitetheorytemplatecustom/css/site.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/sitetheorytemplatecustom/css/landing.css') }}">
{% endblock link %}

{% block appClass %}
landingFull
{% endblock appClass %}


{# Remove standard header image #}
{% block headerImageInsideHeader %}
{% endblock headerImageInsideHeader %}

{% block pageTitle %}
{% endblock pageTitle %}

{# Hide sidebar on desktop #}
{% set bootstrapColumnSidebar = 'visible-xs visible-sm' %}

{# Sidebar is hidden on desktop so main column is full width #}
{% set bootstrapColumnMain = 'noGridSettings' %}

{# Hide gutter in main column #}
{% block mainColumnGutter %}
{% endblock mainColumnGutter %}

{# Hide footer site map #}
{% block footerSiteMap %}
{% endblock footerSiteMap %}

{# Hide footer #}
{% block viewFooter %}
{% endblock viewFooter %}

{# Remove shell vertical content padding class to replace with stream padding #}
{% set headerStructure = 'emptyAll' %}
{% set shellContentStructure = 'emptyAll' %}


{% block header1 %}
    <div id="header1" class="clearfix">
        <div class="clearfix">
            <div id="logoHeader" class="pull-left">
                <img src="{{ asset('bundles/sitetheorytemplatecustom/images/launchLogoHeader.png') }}" alt="">
            </div>
            <div id="mainNavigationHeader" class="siteNavigation">
                <ul class="list-inline fontPrimary">
                    <li><a class="mainNavLink" href="">Other Apps</a></li>
                    <li><a class="mainNavLink" href="">The Difference</a></li>
                    <li><a class="mainNavLink" href="">App</a></li>
                    <li><a class="mainNavLink" href="">Benefits</a></li>
                    <li><a class="mainNavLink" href="">You</a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock header1 %}

{% block content %}

    <div id="tier1" class="siteMaxWidth siteSidePadding shellVerticalPadding">
        <div class="clearfix">
                <div id="tier1Left" class="pull-left">
                    <h1>The Cure for Dating Apps</h1>
                    <div class="borderDashed">
                        <p class="fontPrimary">Launch is an app for all of us who hate the current dating experience. Launch combines the best of new technology, psychometrics and gamification with old-fashioned intuition and the social accountability of friendships. When you play along with your closest friends, magical things happen!</p>
                    </div>
                </div>
                <div id="tier1Right" class="pull-left">
                    <div id="tier1video">
                        <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/tempVideo.jpg') }}" alt="">
                    </div>
                    <div class="borderDashed clearfix">
                        <div class="pull-right">
                            <a class="btn" href="">Go to Kickstarter Campaign</a>
                        </div>
                        <p class="fontPrimary">We need your help!</p>
                    </div>
                </div>
        </div>
    </div>

    <div id="tier2">
        <div class="centerText">
            <div class="siteMaxWidth siteSidePadding shellVerticalPadding">
                <h1>We Feel Ya</h1>
                <div class="borderDashedLight">
                    <p class="fontPrimary bodyLarge">80% of single Americans won’t go on even one app-matched date this year, despite thousands of online dating services. Because current apps are only aimed at making the experience better for power players who already like online dating.</p>
                </div>
            </div>
        </div>
    </div>

    <div id="tier3" class="backgroundDark fontPrimary">
        <div class="siteMaxWidth siteSidePadding shellVerticalPadding">
            <h3>So if we agree that</h3>
            <h1>DATING APPS SUCK</h1>
            <div class="row">
                <div class="col-xs-5 clearfix">
                    <div class="badAppImage pull-left">
                        <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/badMatch1.png') }}" alt="">
                    </div>
                    <p class="pull-left">Dishonest &amp; Shallow Profiles</p>
                </div>
                <div class="col-xs-5 col-xs-offset-2 rightCol clearfix">
                    <div class="badAppImage pull-right">
                        <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/badMatch4.png') }}" alt="">
                    </div>
                    <p class="pull-right">Lazy &amp; Aggressive Messaging</p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-5 borderDashed clearfix">
                    <div class="badAppImage pull-left">
                        <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/badMatch2.png') }}" alt="">
                    </div>
                    <p class="pull-left">Creeps &amp; Players</p>
                </div>
                <div class="col-xs-5 col-xs-offset-2 borderDashed rightCol clearfix">
                    <div class="badAppImage pull-right">
                        <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/badMatch5.png') }}" alt="">
                    </div>
                    <p class="pull-right">Bots</p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-5 borderDashed clearfix">
                    <div class="badAppImage pull-left">
                        <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/badMatch3.png') }}" alt="">
                    </div>
                    <p class="pull-left">Superficial Matches</p>
                </div>
                <div class="col-xs-5 col-xs-offset-2 borderDashed rightCol clearfix">
                    <div class="badAppImage pull-right">
                        <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/badMatch6.png') }}" alt="">
                    </div>
                    <p class="pull-right">Interaction Anxiety</p>
                </div>
            </div>
        </div>
    </div>

    <div id="tier4" class="fontPrimary">
        <div class="siteMaxWidth siteSidePadding shellVerticalPadding">
            <h3>Then Let's Build Something</h3>
            <h1>COMPLETELY DIFFERENT</h1>
            <p class="bodyLarge">Online dating made it easier for relationship-seekers to connect, but only from an isolated, anonymous space—which fosters really bad behavior.<br><br>

                We have a simple formula to change that:
            </p>
            <h3 id="formula">Make dating social again</h3>
        </div>

        <div id="tier4chart">
            <div class="midline"></div>
            <div class="siteMaxWidth siteSidePadding shellVerticalPadding">
                <div id="tier4logo">
                    <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/tier4logo.png') }}" alt="">
                </div>

                <div class="clearfix">
                    <div class="chartCol left">
                        <div class="chartContent">
                            <div class="chartIcon">
                                <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/tier4spacemen1.png') }}" alt="">
                            </div>
                            <h3>Friend Validation"</h3>
                            <p>Friends vouch for you, adding fun and interesting insights to your profile.</p>
                        </div>
                    </div>
                    <div class="chartCol right">
                        <div class="chartContent">
                            <div class="chartIcon">
                                <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/tier4spacemen3.png') }}" alt="">
                            </div>
                            <h3>Crowdsourced Intuition"</h3>
                            <p>Your friends use their intuition and experience to suggest great matches for you to review. The perspective of non-single matchmakers is especially encouraged!</p>
                        </div>
                    </div>
                </div>
                <div class="clearfix">
                    <div class="chartCol left">
                        <div class="chartContent">
                            <div class="chartIcon">
                                <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/tier4spacemen2.png') }}" alt="">
                            </div>
                            <h3>Fun &amp; R.E.S.P.E.C.T.</h3>
                            <p>We create a fun and respectful community by making sure that all the people you match with, are approved by and accountable to their friends for online and offline behavior.</p>
                        </div>
                    </div>
                    <div class="chartCol right">
                        <div class="chartContent">
                            <div class="chartIcon">
                                <img style="width:100%;" src="{{ asset('bundles/sitetheorytemplatecustom/images/tier4spacemen4.png') }}" alt="">
                            </div>
                            <h3>Socialness<br>(no that’s not a word)></h3>
                            <p>We let you share your experience with your friends to get advice, laugh it off, or dance with excitement.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock content %}